<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_1sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        app:cardCornerRadius="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:background="@drawable/kurkure"
                android:id="@+id/img_item_product"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_item_product"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textSize="@dimen/_11sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description_item_product"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gram_item_product"
            android:textColor="@color/grey_font"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_8sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rupee_item_product"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_9sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/add_item_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD+"
                android:layout_marginLeft="@dimen/_5sdp"
                android:backgroundTint="@color/white"
                android:textColor="@color/primary"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>