<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_8sdp"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/markproduct"
            android:layout_marginLeft="@dimen/_10sdp" />
        <TextView
            android:id="@+id/txtdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butter Cake"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="90"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/baseline_currency_rupee_13_black"
            android:textSize="@dimen/_11sdp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/star"
            android:layout_marginLeft="@dimen/_10sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_7sdp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="148 ratings"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:justificationMode="inter_word"
            android:maxLines="2"
            android:text="@string/des"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />


    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgdetail"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/cupcake"
                android:layout_gravity="right"/>
            <Button
                android:id="@+id/add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD +"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:backgroundTint="@color/white"
                android:textColor="@color/primary"
                />


        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>