<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_8sdp"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/markproduct"
            android:layout_marginLeft="@dimen/_10sdp" />
        <TextView
            android:id="@+id/item_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butter Cake"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/item_price_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="₹90"
            android:drawableLeft="@drawable/baseline_currency_rupee_11_grey"
            android:foreground="@drawable/strike_text"
            android:textColor="@color/grey_font_color"
            android:textSize="@dimen/_11sdp" />
            <TextView
                android:id="@+id/item_offer_price_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="₹90"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/baseline_currency_rupee_13_black"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/star"
            android:layout_marginLeft="@dimen/_10sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/_7sdp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="148 ratings"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_des_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/des"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_8sdp"
            android:maxLines="2"
            android:justificationMode="inter_word"
            android:layout_marginLeft="@dimen/_10sdp"
            />



    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:src="@drawable/kurkure"
                android:layout_gravity="right"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_gravity="center"
                app:cardElevation="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/img_minus_vote"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/primary"
                        android:text="-" />
                    <TextView
                        android:id="@+id/txt_num_vote"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/_15sdp"
                        android:text="0"
                        android:maxLength="2" />
                    <Button
                        android:id="@+id/img_plus_vote"
                        android:layout_width="@dimen/_30sdp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/primary"
                        android:layout_height="@dimen/_30sdp"
                        android:text="+" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>